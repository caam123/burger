<link rel="stylesheet" href=".assets/css/main.css" type="css" />

<div class="container">
  <div class="row">
    <h1>Burgers!</h1>
  </div>

  <div class="row row-main align-items-top">

    <div class="col-sm-6">
      <h2>Add a Burger</h2>

      <form class="create-form">
        <div class="form-group">
          <label for="burgerName">Burger name:</label>
          <br>
          <input type="text" id="burgerName" name="name" required>
        </div>
        <button type="submit">Add a Burger</button>
      </form>
    </div>
    
    <div class="col-sm-6">
      <h2>Eat a Burger</h2>
      <ul>
        {{#each burgers}}
          <li>
            {{burger_name}}
            <button class="devour" data-id="{{this.id}}">Devour!</button>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

